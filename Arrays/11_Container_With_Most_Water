class Solution {
    public int maxArea(int[] height) {
        int maxVolume = 0;
        int i = 0;
        int j = height.length - 1;

        while(i < j){
            int volume = 0;
            int dis = j - i;
            if(height[i] > height[j]){
                volume = height[j] * dis;
                maxVolume = Math.max(volume, maxVolume);
                j--;
            }
            else {
                volume = height[i] * dis;
                maxVolume = Math.max(volume, maxVolume);
                i++;
            }
        }
        return maxVolume;
    }
}